@page
@model WebsitePsychologist.Pages.RegistrationModel
@{
    ViewData["Title"] = "Регистрация нового пользователя";
}
<div class="container-sm mw-50">
    <form method="post">
        <div class="row m-3 form-group">
            <label class="col-sm-4 col-form-label fw-bold">Логин</label>
            <div class="col-sm-8">
                <input class="form-control" type="text" name="Login" placeholder="Поле обязательно для заполнения">
                <span asp-validation-for="@Model.Login" class="text-danger fst-italic fs-5"></span>
            </div>
        </div>
        <div class ="row m-3">
            <label class="col-sm-4 col-form-label fw-bold">Пол</label>
            <div class="col-sm-8">
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="Gender" id="inlineRadio1" value="М" checked>
                    <label class="form-check-label" for="inlineRadio1">М</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="Gender" id="inlineRadio2" value="Ж">
                    <label class="form-check-label" for="inlineRadio2">Ж</label>
                </div>
            </div>
        </div>
        <div class="row m-3">
            <label class="col-sm-4 col-form-label fw-bold">Пароль</label>
            <div class="col-sm-8">
                <input type="password" name="Password" class="form-control" placeholder="Поле обязательно для заполнения">
                <span asp-validation-for="@Model.Password" class="text-danger fst-italic fs-5"></span>
            </div>
        </div>
        <div class="row m-3">
            <label class="col-sm-4 col-form-label fw-bold">Подтверждение пароля</label>
            <div class="col-sm-8">
                <input type="password" name="ConfirmPassword" class="form-control" placeholder="Поле обязательно для заполнения">
                <span asp-validation-for="@Model.ConfirmPassword" class="text-danger fst-italic fs-5"></span>
            </div>
        </div>
        <div class="mt-5 text-center">
            <button type="submit" class="btn-custom">Зарегистрироваться</button>
        </div>
    </form>
 </div>